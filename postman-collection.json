{
  "info": {
    "name": "E-commerce Backend API",
    "description": "Complete headless e-commerce backend API with products, cart, promos, and orders",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "guestToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "",
      "type": "string"
    },
    {
      "key": "variantId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderNumber",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.data && response.data.length > 0) {",
                  "        pm.collectionVariables.set('productId', response.data[0]._id);",
                  "        if (response.data[0].variants && response.data[0].variants.length > 0) {",
                  "            pm.collectionVariables.set('variantId', response.data[0].variants[0]._id);",
                  "        }",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Products with Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products?category=Electronics&minPrice=100&maxPrice=1000&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "category",
                  "value": "Electronics"
                },
                {
                  "key": "minPrice",
                  "value": "100"
                },
                {
                  "key": "maxPrice",
                  "value": "1000"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products?search=laptop",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"],
              "query": [
                {
                  "key": "search",
                  "value": "laptop"
                }
              ]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "{{productId}}"]
            }
          }
        },
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products", "categories"]
            }
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Product\",\n  \"description\": \"A test product for API testing\",\n  \"category\": \"Test Category\",\n  \"images\": [\"https://example.com/image1.jpg\"],\n  \"variants\": [\n    {\n      \"name\": \"Default\",\n      \"sku\": \"TEST-001\",\n      \"price\": 99.99,\n      \"inventory\": 50,\n      \"attributes\": {\n        \"color\": \"Blue\",\n        \"size\": \"Medium\"\n      }\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Create Cart",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('guestToken', response.data.guestToken);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{guestToken}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{guestToken}}"]
            }
          }
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{guestToken}}/items/{{productId}}/{{variantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{guestToken}}", "items", "{{productId}}", "{{variantId}}"]
            }
          }
        },
        {
          "name": "Update Cart Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 3\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{guestToken}}/items/{{productId}}/{{variantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{guestToken}}", "items", "{{productId}}", "{{variantId}}"]
            }
          }
        },
        {
          "name": "Remove Item from Cart",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{guestToken}}/items/{{productId}}/{{variantId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{guestToken}}", "items", "{{productId}}", "{{variantId}}"]
            }
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/cart/{{guestToken}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{guestToken}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Promo Codes",
      "item": [
        {
          "name": "Get All Promos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/promos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "promos"]
            }
          }
        },
        {
          "name": "Validate Promo",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"promoCode\": \"WELCOME10\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/promos/{{guestToken}}/validate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "promos", "{{guestToken}}", "validate"]
            }
          }
        },
        {
          "name": "Apply Promo to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"promoCode\": \"WELCOME10\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/promos/{{guestToken}}/apply",
              "host": ["{{baseUrl}}"],
              "path": ["api", "promos", "{{guestToken}}", "apply"]
            }
          }
        },
        {
          "name": "Remove Promo from Cart",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/promos/{{guestToken}}/remove",
              "host": ["{{baseUrl}}"],
              "path": ["api", "promos", "{{guestToken}}", "remove"]
            }
          }
        },
        {
          "name": "Create Promo",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"TEST20\",\n  \"name\": \"Test 20% Off\",\n  \"description\": \"Test promo code for 20% discount\",\n  \"type\": \"percentage\",\n  \"value\": 20,\n  \"validFrom\": \"2024-01-01T00:00:00.000Z\",\n  \"validUntil\": \"2024-12-31T23:59:59.000Z\",\n  \"usageLimit\": 100,\n  \"minOrderAmount\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/promos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "promos"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order from Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"shippingAddress\": {\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+1234567890\",\n    \"street\": \"123 Main St\",\n    \"city\": \"New York\",\n    \"state\": \"NY\",\n    \"postalCode\": \"10001\",\n    \"country\": \"USA\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{guestToken}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{guestToken}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('orderNumber', response.data.orderNumber);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Order by Number",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderNumber}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderNumber}}"]
            }
          }
        },
        {
          "name": "Get Orders by Guest Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders/guest/{{guestToken}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "guest", "{{guestToken}}"]
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"processing\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/orders/{{orderNumber}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "{{orderNumber}}", "status"]
            }
          }
        },
        {
          "name": "Get All Orders (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/orders?page=1&limit=10&status=pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
